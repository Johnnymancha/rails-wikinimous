<div class="container">
  <div>
    <h1>Edit this Article</h1>
  </div>

  <div>
    <%= form_for(@article) do |f| %>
      <%= f.label :title, 'Article name' %>
      <%= f.text_field :title %>
      <%= f.label :content, 'Description of the article'%>
      <%= f.text_field :content %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
