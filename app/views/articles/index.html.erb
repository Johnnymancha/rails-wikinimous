<body>
  <div>
    <div class="banner">
    <h1>Wikinimous</h1>
    </div>
      <% @articles.each do |article| %>
      <h2 class="titre-article"><%= link_to article.title, article_path(article) %></h2>
      <%= link_to article_path(article), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
      <p class="content-article">
        <%= article.content %>
      <p>

      <% end %>

    <div>
      <%= link_to 'Add a new article', new_article_path %>

    </div>
  </div>
</body>
